<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tabColor"
    tools:context="joker.anime_v2.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chooseImage">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Choose Cover Picture"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:background="@drawable/circular_transparent_button"
                android:textSize="16sp"
                android:gravity="center_vertical"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/nocover"
                android:layout_marginTop="10dp"
                android:id="@+id/coverPicture"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Choose Profile Picture"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:background="@drawable/circular_transparent_button"
                android:textSize="16sp"
                android:gravity="center_vertical"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/nobody"
                android:id="@+id/profilePicture"/>
        </LinearLayout>


    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:id="@+id/chooseName"
        android:hint="Your Name"
        android:textColor="#000000"
        android:padding="5dp"
        android:background="@drawable/bg_edittext"
        android:layout_below="@+id/chooseImage"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:id="@+id/chooseQuote"
        android:layout_below="@+id/chooseName"
        android:background="@drawable/bg_edittext"
        android:padding="5dp"
        android:hint="Your Quote"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:id="@+id/chooseEmail"
        android:layout_below="@+id/chooseQuote"
        android:background="@drawable/bg_edittext"
        android:padding="5dp"
        android:hint="Your Email"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:id="@+id/chooseJob"
        android:layout_below="@+id/chooseEmail"
        android:background="@drawable/bg_edittext"
        android:padding="5dp"
        android:hint="Your Job"
        android:textColor="#000000"/>

</RelativeLayout>
